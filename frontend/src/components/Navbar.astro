// src/components/Navbar.astro
---

<nav id="navbar" class="sticky top-0 z-50 w-full transition-all duration-500 border-b border-transparent">
  <div class="max-w-6xl mx-auto px-6 h-16 flex justify-between items-center">
    
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-8 h-8 bg-green-700 text-white rounded flex items-center justify-center font-bold text-lg shadow-md group-hover:bg-green-800 transition-colors">M</div>
      <span class="font-bold tracking-tight text-gray-900 text-lg">MAPALA<span class="text-green-700">NEWS</span></span>
    </a>

    <div class="hidden md:flex items-center space-x-1">
      
      <a href="/" class="px-4 py-2 text-xs font-bold text-white bg-green-700 rounded-full hover:bg-green-800 transition-colors tracking-widest uppercase shadow-sm">
        Home
      </a>
      
      <div class="h-4 w-[1px] bg-gray-400/50 mx-2"></div>

      <div class="flex space-x-6 text-xs font-bold tracking-widest text-gray-600 uppercase">
        
        <a href="/kategori/isu konservasi" 
           class="hover:text-green-700 transition-all hover:underline hover:decoration-2 hover:underline-offset-8 decoration-green-700">
           Konservasi
        </a>

        <a href="/kategori/bencana alam" 
           class="hover:text-red-700 transition-all hover:underline hover:decoration-2 hover:underline-offset-8 decoration-red-700">
           Bencana
        </a>

        <a href="/kategori/ekspedisi" 
           class="hover:text-blue-700 transition-all hover:underline hover:decoration-2 hover:underline-offset-8 decoration-blue-700">
           Ekspedisi
        </a>

        <a href="#tentang" 
           class="text-gray-400 hover:text-gray-900 transition-all hover:underline hover:decoration-2 hover:underline-offset-8 decoration-gray-500 ml-4">
           Tentang
        </a>

      </div>
    </div>

    <button class="md:hidden text-gray-700 text-2xl">â˜°</button>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');

  function updateNavbar() {
    // Definisi style scroll (Kaca Es / Frosted Glass)
    // bg-white/40 supaya blur-nya kelihatan (kalau /5 terlalu tipis/bening)
    const scrollClasses = ['bg-white/40', 'backdrop-blur-3xl', 'shadow-md', 'border-white/20'];
    const topClasses = ['bg-transparent', 'border-transparent'];

    if (window.scrollY > 10) {
        // SAAT DI-SCROLL
        navbar.classList.add(...scrollClasses);
        navbar.classList.remove(...topClasses);
    } else {
        // SAAT DI ATAS
        navbar.classList.add(...topClasses);
        navbar.classList.remove(...scrollClasses);
    }
  }

  window.addEventListener('scroll', updateNavbar);
  updateNavbar();
</script>